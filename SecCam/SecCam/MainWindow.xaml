<Window x:Class="SecCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecCam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="camImg" HorizontalAlignment="Left" Height="245" Margin="10,49,0,0" VerticalAlignment="Top" Width="771"/>
        <Button x:Name="testBtn" Content="Get cameras" HorizontalAlignment="Center" Margin="0,336,0,0" VerticalAlignment="Top" Click="testBtn_Click"/>
        <ComboBox x:Name="cbCameraSelector" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnShowCamera" Content="Show Camera" HorizontalAlignment="Left" Margin="472,336,0,0" VerticalAlignment="Top" Width="96" Click="btnShowCamera_Click"/>
    </Grid>
</Window>
